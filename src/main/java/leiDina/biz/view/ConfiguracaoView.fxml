<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="200.0" minWidth="300.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.leiDina.biz.controllers.configuration.ConfiguracaoController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="60.0" prefWidth="164.0">
               <children>
                  <Label text="Segundos">
                     <HBox.margin>
                        <Insets left="15.0" right="50.0" top="35.0" />
                     </HBox.margin>
                  </Label>
                  <Label text="Numero de Palavras">
                     <HBox.margin>
                        <Insets left="15.0" right="50.0" top="35.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox>
               <children>
                  <TextField fx:id="seconds" maxWidth="45.0" minWidth="45.0" prefHeight="23.0" prefWidth="45.0">
                     <HBox.margin>
                        <Insets left="15.0" top="5.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="numeroPalavras" maxWidth="45.0" minWidth="45.0" prefHeight="23.0" prefWidth="45.0">
                     <HBox.margin>
                        <Insets left="85.0" top="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <Button fx:id="save" mnemonicParsing="false" text="Save" onMouseClicked="#save">
               <VBox.margin>
                  <Insets bottom="20.0" left="30.0" top="80.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
